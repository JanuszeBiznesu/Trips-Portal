<aside class="col-md-4">
 <%= gravatar_for user, size: 50 %>
  <%= link_to "#{user.name} #{user.surname}", user %>
  <% if current_user.admin? && !current_user?(user) %>
      <%= link_to(user, method: :delete) do %>
		    <input type="button" value="Delete" class="btn btn-primary marginally_left" style="width: 60px;"/>
      <% end %>
      <% if (not user.activated?) %>
	  		<%= link_to edit_account_activation_path(user) do %>
		      <input type="button" value="Activate" class="btn btn-primary marginally_left" style="width: 60px;"/>
	  	  <% end %>
      <% end %>
  <% end %>
</aside>
