<h1>Book Search</h1>
 
<%= form_for search_trips_path, method: :get do |f| %>
  <p>
    <%= f.label "Search for" %>
    <%= text_field_tag :q, params[:q] %>
    <%= select_tag "country_id", options_from_collection_for_select(get_countries, "id", "name") %>
    <%= submit_tag "Go", name: nil %>
  </p>
<% end %>
<% if @trips != [] %>

  <div class="books">
    <% @trips.each do |trip| %>
      <%= render :partial => 'trips/trip', :locals => {:trip => trip} %>
    <% end %>
  <%= will_paginate  @trips %>

<% end %>


