<div class="marginally_top">
  <%= link_to book_path(book.id) do %>
    <aside class="col-md-4">
      <%= image_tag Book.find(book.id).picture.url if Book.find(book.id).picture? %>
      <%= image_tag "temp.jpg" if !Book.find(book.id).picture? %>
      <section class="synopsis">
        <span class="content">
          <p> <strong> Title: </strong> <%= book.title %> </p>
          <p> <strong> Author: </strong> <%= User.find(book.user_id).name %> <%= User.find(book.user_id).surname  %> </p> 
          <p> <strong> Country: </strong> <%= Genre.find(book.genre_id).name %> </p> 
      </section>
      </aside>
  </div>
<% end %>
