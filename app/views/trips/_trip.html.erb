<div class="marginally_top">
  <%= link_to trip_path(trip.id) do %>
    <aside class="col-md-4">
      <%= image_tag Trip.find(trip.id).picture.url if Trip.find(trip.id).picture? %>
      <%= image_tag "temp.jpg" if !Trip.find(trip.id).picture? %>
      <section class="synopsis">
        <span class="content">
          <p> <strong> Title: </strong> <%= trip.title %> </p>
          <p> <strong> Author: </strong> <%= User.find(trip.user_id).name %> <%= User.find(trip.user_id).surname  %> </p> 
          <p> <strong> Country: </strong> <%= Country.find(trip.country_id).name %> </p> 
      </section>
      </aside>
  </div>
<% end %>
